---
import "@fontsource-variable/montserrat";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg relative mx-auto min-h-screen max-w-screen-lg overflow-x-hidden border-current text-text shadow-straight lg:my-10 lg:border-2"
  >
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --screen-md: 768px;
    scroll-behavior: smooth;
  }

  .layout {
    padding-left: 4%;
    padding-right: 4%;
    margin-left: auto;
    margin-right: auto;

    @media (min-width: 768px) {
      padding-left: 6%;
      padding-right: 6%;
    }
  }
</style>

<style is:global>
  .bg {
    --bgColor: theme("colors.secondary.200");
    --dotColor: theme("colors.secondary.400");
    --bgSize: 7px;
    --dotSize: 1px;

    background-color: var(--bgColor);
    opacity: 1;
    background-image: radial-gradient(
        var(--dotColor) var(--dotSize),
        transparent var(--dotSize)
      ),
      radial-gradient(
        var(--dotColor) var(--dotSize),
        var(--bgColor) var(--dotSize)
      );
    background-size: var(--bgSize) var(--bgSize);
    background-position:
      0 0,
      calc(var(--bgSize) / 2) calc(var(--bgSize) / 2);
  }
</style>
