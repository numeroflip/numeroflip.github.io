---
import { twMerge } from "tailwind-merge";
interface Props extends astroHTML.JSX.HTMLAttributes {
  as?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6" | "div" | "p";
}

const { as, class: className, ...props } = Astro.props as Props;
const Element = as || "h2";

const classes = twMerge(
  "inline-block border-2 border-black bg-secondary-100 px-4 py-2 text-2xl md:text-4xl font-extrabold shadow-straight",
  className || ""
);
---

<Element class={classes} {...props}>
  <slot />
</Element>
